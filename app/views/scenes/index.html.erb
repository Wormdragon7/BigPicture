<p id="notice"><%= notice %></p>
<div class="table-responsive">
<h1>Scenes</h1>
</br>

<table class="table table-dark table-striped table-borderless ">
  <thead >
    <tr>
      <th >Scene Title</th>
      <th>Image</th>
      <th>Number</th>
      <th>Description</th>
      <th>Date</th>
      <th>Scenario</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody >
    <% @scenes.each do |scene| %>
      <tr>
        <td><%= scene.title %></td>
        <td><img src="<%= scene.image %>" class="img-thumbnail" alt="img-scene" ></td>
        <td><%= scene.number %></td>
        <td><%= scene.description %></td>
        <td><%= scene.when %></td>
        <td><%= scene.scenario.title %></td>
        
        
        
        <td><button type="button" class="btn bg-secondary"><%= link_to 'Edit Scene', edit_scenario_scene_path(@scenario, scene) %></button></td>
        <td><button type="button" class="btn bg-danger"><%= link_to 'Destroy Scene', [@scenario, scene], method: :delete, data: { confirm: 'Are you sure?' } %></button></td>
      
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<button type="button" class="btn bg-light text-dark"><%= link_to 'New Scene', new_scenario_scene_path(@scenario) %></button> |
</br></br>
<button type="button" class="btn bg-light text-dark"><%= link_to 'Back', [@scenario] %></button>

