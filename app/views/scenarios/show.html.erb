<table class="table table-dark table-striped table-borderless ">
  <thead >
    <tr>
      <th >Scene Title</th>
      <th>Image</th>
      <th>Number</th>
      <th>Description</th>
      <th>Date</th>
      <th>Scenario</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody >
  <% for scene in @scenario.scenes %>
      <tr>
        <td><%= scene.title %></td>
        <td><img src="<%= scene.image %>" class="img-thumbnail" alt="img-scene" ></td>
        <td><%= scene.number %></td>
        <td><%= scene.description %></td>
        <td><%= scene.when %></td>
        <td><%= scene.scenario.title %></td>
        <td><%= link_to 'Edit Scene', edit_scenario_scene_path(@scenario, scene) %></td>
        <td><%= link_to 'Destroy Scene', [@scenario, scene], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>

</table>

<button type="button" class="btn bg-light text-dark"><%= link_to 'Add Scene', new_scenario_scene_path(@scenario) %></button>

