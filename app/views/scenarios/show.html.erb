<div class="card" style="width: 18rem;">
  <img src="<%= @scenario.image %>" class="card-img-top img-thumbnail" alt="img-scenario">
  <div class="card-body">
    <h5 class="card-title"><strong>Title:</strong><%= @scenario.title %></h5>
    <p class="card-text"><strong>Description:</strong><%= @scenario.description %></p>
  </div>
  <ul class="list-group list-group-flush">
    <li class="list-group-item"><strong>Start:</strong>
    <%= @scenario.start %></li>
    <li class="list-group-item"><strong>End:</strong>
    <%= @scenario.end %></li>
    <li class="list-group-item"><strong>Author:</strong>
    <%= @user.email %></li>
  </ul>
  <div class="card-body">
  <button type="button" class="btn bg-dark"><%= link_to 'Edit Scenario', edit_scenario_path(@scenario) %> </button> |
  <button type="button" class="btn bg-dark"><%= link_to 'Back', scenarios_path %></button>
  </div>
</div>
