<p id="notice"><%= notice %></p>

<h1>Scenarios</h1>

<table class="table table-dark table-striped table-borderless ">
  <thead>
    <tr>
      <th>Title</th>
      <th>Image</th>
      <th>Description</th>
      <th>Start</th>
      <th>End</th>
      <th>Author</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody >
    <% @scenarios.each do |scenario| %>
      <tr>
        <td><%= scenario.title %></td>
        <td><img src="<%= scenario.image %>" class="img-thumbnail" alt="img-scene"></td>
        <td><%= scenario.description %></td>
        <td><%= scenario.start %></td>
        <td><%= scenario.end %></td>
        <td><% if scenario.user.present? %>
        <%= scenario.user.email %>
        <% end %></td>
        <td><button type="button" class="btn bg-light text-dark"><%= link_to 'Show', scenario %></button></td>
        <td><button type="button" class="btn bg-secondary"><%= link_to 'Edit', edit_scenario_path(scenario) %></button></td>
        <td><button type="button" class="btn bg-danger"><%= link_to 'Destroy', scenario, method: :delete, data: { confirm: 'Are you sure?' } %></button></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<button type="button" class="btn bg-light text-dark"><%= link_to 'New Scenario', new_scenario_path %></button>
